s as pd\n","data={'Name':['abhi','bob','charlie','david','eve'],\n","'age':[25,30,35,40,56],\n","'salary':[50000,60000,56000,50000,70000],\n","'allowance':[2000,2000,2000,2500,2000]}\n","df=pd.DataFrame(data)\n","print(\"actual data frame\\n\",df)\n","df_sorted_salary=df.sort_values('salary',ascending=True)\n","print(\"sortedsalary\\n\",df_sorted_salary)\n","df_sorted_multiple=df.sort_values(['Name','salary','age'])\n","print(\"sorting by age and salary\\n\",df_sorted_multiple)\n","df_indexed=df.set_index('Name')\n","print(\"setting index \\n\",df_indexed)\n","df_reset=df_indexed.reset_index()\n","print(\"reset \\n\",df_reset)\n","\n"]}]}