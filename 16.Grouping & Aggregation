llowance':[2000,2000,2000,2500,2000]}\n","df=pd.DataFrame(data)\n","print(\"actual data frame\\n\",df)\n","#1group by 'name' and calculate mean\n","groupMean=df.groupby('Name').mean()\n","print(\"\\ngroup by name =mean:\\n\",groupMean)\n","#2group by 'name'and calculate both mean and sum\n","groupAge=df.groupby('Name').agg(['mean','sum'])\n","print(\"\\ngroup by name =mean&sum:\\n\",groupAge)\n","#3pivot table  with 'salary'as values,grouped by 'name'(index)\n","Pivot_table=df.pivot_table(values='salary',index='Name')\n","print(\"\\npivot table:\\n\",Pivot_table)\n","\n"]}]}